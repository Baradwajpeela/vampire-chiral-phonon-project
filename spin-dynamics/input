sim:laser-pulse-time = 2000 !fs
sim:laser-pulse-temporal-profile=two-temperature
sim:preconditioning-steps=10000
sim:equilibration-time-steps=10000
sim:total-time-steps=300000
sim:time-step=5E-16
sim:time-steps-increment=1
