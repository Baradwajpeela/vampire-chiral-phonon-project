
# System dimensions
dimensions:system-size-x=4 !nm
dimensions:system-size-y=4 !nm
dimensions:system-size-z=41 !A
#---------------------------------------------------
# Creation attributes
#---------------------------------------------------
create:periodic-boundaries-x
create:periodic-boundaries-y
create:periodic-boundaries-z
#---------------------------------------------------
# Material files
#---------------------------------------------------
material:unit-cell-file=cgt.ucf
material:file=material.mat
#---------------------------------------------------
# Simulation attributes
#---------------------------------------------------
sim:program=curie-temperature
sim:equilibration-time-steps=10000
sim:loop-time-steps = 10000
sim:time-steps-increment = 1
sim:minimum-temperature=0
sim:maximum-temperature=100
#sim:applied-field-strength= 2.0!T
sim:temperature-increment=1
sim:integrator=monte-carlo
#---------------------------------------------------
# Data output
#---------------------------------------------------
output:temperature
output:mean-magnetisation-length
config:atoms
screen:temperature
screen:mean-magnetisation-length

