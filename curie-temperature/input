# System dimensions
dimensions:system-size-x=12 !nm
dimensions:system-size-y=12 !nm
dimensions:system-size-z=11.2 !nm
#---------------------------------------------------
# Creation attributes
#---------------------------------------------------
create:periodic-boundaries-x
create:periodic-boundaries-y
#create:periodic-boundaries-z
#---------------------------------------------------
# Material files
#---------------------------------------------------
material:unit-cell-file=cgt.ucf
material:file=material.mat
#---------------------------------------------------
# Simulation attributes
#---------------------------------------------------
#sim:preconditioning-steps=10000
sim:equilibration-time-steps=5000
sim:minimum-temperature=0
sim:maximum-temperature=125
sim:temperature-increment=5
#------------------------------------------
# Program and integrator details
#------------------------------------------
sim:program = curie-temperature
sim:integrator = monte-carlo
#------------------------------------------
# data output
#------------------------------------------
output:column-headers
output:temperature
output:magnetisation-length
config:atoms
screen:temperature
