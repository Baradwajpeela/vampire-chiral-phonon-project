# System dimensions
dimensions:system-size-x=52 !nm
dimensions:system-size-y=52 !nm
dimensions:system-size-z=11.6 !nm
#---------------------------------------------------
# Creation attributes
#---------------------------------------------------
create:periodic-boundaries-x
create:periodic-boundaries-y
#create:periodic-boundaries-z
#---------------------------------------------------
# Material files
#---------------------------------------------------
material:unit-cell-file=cgt.ucf
material:file=material.mat
#------------------------------------------
# Simulation attributes:
#------------------------------------------
sim:loop-time-steps=1500
sim:time-step=1.0e-15
sim:temperature=20
sim:applied-field-strength-increment=0.0015 !T
sim:applied-field-unit-vector=0,0.001,0.999
sim:maximum-applied-field-strength = 1 !T
#------------------------------------------
# Program and integrator details
#------------------------------------------
sim:program=hysteresis-loop
sim:integrator=llg-heun

#------------------------------------------
# data output
#------------------------------------------
output:column-headers
output:real-time
output:applied-field-strength
output:material-magnetisation
config:atoms
